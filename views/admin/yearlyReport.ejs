<%- include('../admin-partials/header'); -%>





<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css">

<div class="page-inner">

    <!-- PAGE MAIN WRAPPER
    ================================================== -->
    <div id="main-wrapper">

        <!-- row -->
        <div class="row">
       
            <div class="col-xl-3 col-md-6 half-gutter grid-margin">
                <div class="card card-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="pt-3"> 
                                <h4 class="mb-0 text-orange">DOWNLOAD</h4>
                                <p>You Can Download Report</p>
                                <span onclick="generatePdf()" class="badge rounded-pill bg-soft-orange"> <i class="fa-solid fa-file-arrow-down"></i> DOWNLOAD </span> 
                            </div>
                            <div>
                                <i class="fa-solid fa-file-arrow-down"></i>
                            </div>
                        </div>
                        <!-- <div class="custom-progress bg-orange progress mb-0">
                            <div class="animated custom-bar progress-bar slideInLeft" style="width:80%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                        </div> -->
                    </div>
                </div>
            </div>
           
        </div>
        <!-- end row -->

  

        <!-- row -->
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card card-white h-100">
                    <div class="card-heading clearfix">
                        <h4 class="card-title">Yearly Report</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div id="invoice">
                                <table id="example" class="table mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            
                                            <th>Date</th>
                                            <th>Total Order</th>
                                            <th>Total Product</th>
                                            <th>Total</th>
                                            <th>Profit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                           <%if(report){%>
                                            <%for(i=0;i<report.length;i++){%>
                                                <td><%=report[i]._id.year%> </td>
                                                <td>
                                                    <%=report[i].count%>
                                                </td>
                                                <td>
                                                    <%=report[i].items%>
                                                </td>
                                                <td>
                                                    $<%=report[i].total%></span>
                                                </td>
                                                <td>
                                                    $<%=report[i].total*12/100%>
                                                </td>
                                            </tr>
                                             
                                            <%}%>    
                                           <%}else{%>
                                      
                                           <%}%>  
                                   
                                          
    
                                        
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div>

    <div class="page-footer">
        <p>Copyright &copy; <span class="current-year"></span> Ekka All rights reserved.</p>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
<script>
    function generatePdf(){
        const element=document.getElementById("invoice");
        html2pdf().from(element).save()
    }
 
</script>


<%- include('../admin-partials/reportFooter'); -%>